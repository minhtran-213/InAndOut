@model IEnumerable<InAndOut.Models.ExpenseCategory>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create new category</a>
        </div>
    </div>
    <br />

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        CategoryName
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var category in Model)
                {
                <tr>
                    <td width="35%">@category.CategoryName</td>
                    <td width="30%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Update" asp-route-Id="@category.CategoryID" class="btn btn-primary mx-1">Update</a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-Id="@category.CategoryID" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table> 
    }
    else
    {
        <p>No items created yet</p>
    }

</div>

